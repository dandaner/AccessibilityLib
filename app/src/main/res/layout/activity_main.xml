<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.accessibility.MainActivity">

    <Button
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开辅助功能" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始加速强停功能" />

    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止加速强停功能" />

    <Button
        android:id="@+id/auto_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动安装" />

    <Button
        android:id="@+id/auto_uninstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动卸载" />

    <Button
        android:id="@+id/acc_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加速容错检测" />

    <Button
        android:id="@+id/install_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安装容错检测" />

    <Button
        android:id="@+id/uninstall_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="卸载容错检测" />

</LinearLayout>
